<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ParametrageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:srcCompat="@drawable/logoresto" />

        <TextView
            android:id="@+id/t_compMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="composition menu"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="24dp"
            />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="106dp" />

    <EditText
        android:id="@+id/i_nomElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nom de l'élément" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_entree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="entrée" />

        <RadioButton
            android:id="@+id/rb_plat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="plat" />

        <RadioButton
            android:id="@+id/rb_desssert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="dessert" />
    </LinearLayout>

    <Button
        android:id="@+id/b_ajouterAListe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ajouter a la liste" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="113dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t_entrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Entrées"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/t_plats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="plats"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/t_desserts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="dessert"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/s_entrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:entries="@array/listeEntrees" />

        <Spinner
            android:id="@+id/s_plats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:entries="@array/listePlats" />

        <Spinner
            android:id="@+id/s_desserts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:entries="@array/listeDesserts" />

    </LinearLayout>

    <EditText
        android:id="@+id/i_elementSelectionne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nom de l'élément sélectionné" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/b_supprimerDeListe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supprimer de la liste"
        android:textColor="@color/couleurEnregistrer"
        android:textStyle="bold" />

</LinearLayout>

